// 添加body全背景图
body {
    background-image: url(https://xsx.xx.kg/file/iubQMgzz.webp) !important;
    background-size: cover !important;
    background-attachment: fixed !important;
    background-position: center !important;
    background-repeat: no-repeat !important;
    min-height: 100vh;
}

// 确保内容区域可读性
#page {
    background: rgba(var(--anzhiyu-card-bg), 0.92);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    margin: 20px auto;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

// 暗色模式适配
[data-theme="dark"] body {
    background-image: url(https://xsx.xx.kg/file/7Z8vlcf1.webp) !important;
}

[data-theme="dark"] #page {
    background: rgba(var(--anzhiyu-card-bg), 0.88);
}

// 移动端优化
@media screen and (max-width: 768px) {
    body {
        background-attachment: scroll !important;
    }
    
    #page {
        margin: 10px;
        padding: 20px;
        border-radius: 12px;
    }
}
